<mah:MetroWindow xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    x:Class="AutoCADWpf.ladderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ladder Window" Height="133" Width="300" WindowStartupLocation="CenterScreen">
    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <!-- Theme setting -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>

    <StackPanel>
        <ListBox x:Name="lstTypes">
            <ListBoxItem>斜梯</ListBoxItem>
            <ListBoxItem>直爬梯</ListBoxItem>            
        </ListBox>
        <TextBlock >高度(mm)：</TextBlock>
        <TextBox x:Name="txtHeight"></TextBox>
        <Button x:Name="Ok" Click="Ok_Click" >Ok</Button>

    </StackPanel>
</mah:MetroWindow>
